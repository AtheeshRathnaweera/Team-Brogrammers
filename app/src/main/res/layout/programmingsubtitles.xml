<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="4dp"
    android:paddingLeft="4dp"
    android:paddingRight="4dp">

    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:orientation="vertical"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="8dp">


        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="165dp"
            android:layout_height="186dp"
            android:adjustViewBounds="true"
            android:background="@drawable/subjectselectbuttons"
            android:paddingBottom="10dp"
            android:scaleType="fitCenter"
            app:layout_column="0"
            app:layout_row="0"
            app:srcCompat="@drawable/cbutton"
            android:layout_marginBottom="6dp"
            android:layout_marginRight="3dp"
            android:layout_marginEnd="3dp"/>

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="165dp"
            android:layout_height="186dp"
            android:adjustViewBounds="true"
            android:background="@drawable/subjectselectbuttons"
            android:paddingBottom="10dp"
            android:paddingLeft="19dp"
            android:paddingRight="19dp"
            android:paddingTop="9dp"
            android:scaleType="fitCenter"
            app:layout_column="1"
            app:layout_row="0"
            app:srcCompat="@drawable/cplusbutton"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="2dp"
            android:layout_marginStart="2dp"/>

        <ImageButton
            android:id="@+id/imageButton5"
            android:layout_width="165dp"
            android:layout_height="186dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            app:layout_column="0"
            app:layout_row="1"
            android:paddingBottom="10dp"
            android:paddingTop="5dp"
            app:srcCompat="@drawable/csharpbutton"
            android:background="@drawable/subjectselectbuttons"
            android:layout_marginBottom="6dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            />

        <ImageButton
            android:id="@+id/imageButton6"
            android:layout_width="165dp"
            android:layout_height="186dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:paddingBottom="10dp"
            app:layout_column="1"
            app:layout_row="1"
            android:paddingTop="4dp"
            app:srcCompat="@drawable/javabutton"
            android:background="@drawable/subjectselectbuttons"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="2dp"
            />
        <ImageButton
            android:id="@+id/imageButton7"
            android:layout_width="165dp"
            android:layout_height="186dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            app:layout_column="0"
            app:layout_row="2"
            android:paddingBottom="10dp"
            android:paddingTop="9dp"
            app:srcCompat="@drawable/phythonbutton"
            android:background="@drawable/subjectselectbuttons"
            android:layout_marginBottom="6dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            />

        <ImageButton
            android:id="@+id/imageButton8"
            android:layout_width="165dp"
            android:layout_height="186dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            app:layout_column="1"
            app:layout_row="2"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            app:srcCompat="@drawable/rubybutton"
            android:background="@drawable/subjectselectbuttons"
            android:layout_marginBottom="6dp"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="2dp"
            />


    </android.support.v7.widget.GridLayout>
</android.support.v4.widget.NestedScrollView>
